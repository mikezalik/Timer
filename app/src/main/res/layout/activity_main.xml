<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="650dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/timerImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="buttonClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:srcCompat="@drawable/sand_timer" />

    <TextView
        android:id="@+id/numTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="180dp"
        android:text="00:30"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/timerStart"
        app:layout_constraintEnd_toEndOf="@+id/timerImage"
        app:layout_constraintStart_toStartOf="@+id/timerImage"
        app:layout_constraintTop_toTopOf="@+id/timerImage" />

    <Button
        android:id="@+id/timerStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:text="Start Timer!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timerImage"
        app:layout_constraintStart_toEndOf="@+id/timerImage"
        app:layout_constraintStart_toStartOf="@+id/timerImage"
        app:layout_constraintTop_toBottomOf="@+id/numTime" />

</androidx.constraintlayout.widget.ConstraintLayout>